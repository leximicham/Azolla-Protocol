{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ticket",
  "description": "A single objective tracked in the Context Store.",
  "type": "object",
  "required": [
    "ticket_id",
    "azolla_id",
    "title",
    "acceptance_criteria",
    "repo_ref",
    "base_branch",
    "status",
    "created_at",
    "updated_at",
    "blocked_reason",
    "blocked_on"
  ],
  "properties": {
    "ticket_id": {"type": "string"},
    "azolla_id": {"type": "string"},
    "title": {"type": "string"},
    "acceptance_criteria": {"type": "string"},
    "repo_ref": {"type": "string"},
    "base_branch": {"type": "string"},
    "status": {
      "type": "string",
      "enum": ["NEW", "TODO", "IN_PROGRESS", "BLOCKED", "DONE"]
    },
    "blocked_reason": {"type": ["string", "null"]},
    "blocked_on": {
      "type": "array",
      "items": {"$ref": "./blocker_ref.schema.json"}
    },
    "created_at": {"type": "string", "format": "date-time"},
    "updated_at": {"type": "string", "format": "date-time"}
  },
  "additionalProperties": false
}
