{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "claim_record",
  "description": "Operational lease/claim metadata for polling worker ownership of events and workorders.",
  "type": "object",
  "required": [
    "resource_type",
    "resource_id",
    "owner_id",
    "lease_expires_at",
    "heartbeat_at",
    "claim_version"
  ],
  "properties": {
    "resource_type": {"type": "string", "enum": ["EVENT", "WORKORDER"]},
    "resource_id": {"type": "string"},
    "owner_id": {"type": "string"},
    "lease_expires_at": {"type": "string", "format": "date-time"},
    "heartbeat_at": {"type": "string", "format": "date-time"},
    "claim_version": {"type": "integer", "minimum": 0}
  },
  "additionalProperties": false
} 
